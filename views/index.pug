        form(action ='/' method = 'get')
            div.form-input
                label(for = type) Type:
                select(id = 'type' name= 'type' autocomplete='off')
                    each type in types
                        option(value = type selected =(type === findType)) #{type}
                div.form-input
                    label(for = 'random') Random
                    input(type = 'checkbox' name = 'random' id = 'random' checked = searchRandom)
            button.button.save(type = 'submit') Filter
         div.container
            each pokemon in pokemons
                +pokemonCard(pokemon)

